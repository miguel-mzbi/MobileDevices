<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mobiledevices.miguel.activity4.MainActivity">

    <TextView
        android:text="Ravioli Ravioli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"
        android:textSize="22sp"
        android:textAlignment="center" />

    <Button
        android:text="Checklist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:id="@+id/buttonChecklist"
        android:layout_marginStart="45dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:onClick="toChecklist"
        android:background="@android:color/holo_red_light" />

    <Button
        android:text="Notioli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="38dp"
        android:layout_marginTop="38dp"
        android:id="@+id/buttonNotioli"
        android:layout_below="@+id/buttonChecklist"
        android:layout_alignParentEnd="true"
        android:onClick="toNotioli"
        android:background="@android:color/holo_orange_light" />

    <Button
        android:text="Places"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:id="@+id/buttonPlaces"
        android:layout_below="@+id/buttonNotioli"
        android:layout_alignStart="@+id/buttonChecklist"
        android:onClick="toPlaces"
        android:background="@android:color/holo_green_light" />

    <Button
        android:text="Calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonPlaces"
        android:layout_alignStart="@+id/buttonNotioli"
        android:layout_marginTop="44dp"
        android:id="@+id/buttonCalendar"
        android:onClick="toCalendar"
        android:background="@android:color/holo_blue_light" />

</RelativeLayout>
